<odoo>
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate_property_offer.tree</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate_property_offer.form</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer">
                <sheet>
                    <div class="oe_title">
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
